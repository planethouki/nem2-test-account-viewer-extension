{
  "name": "nem2-test-account-viewer-extension",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "inpage.js"
  ]
}
